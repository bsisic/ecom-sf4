{% extends 'base.html.twig' %}

{% block title product.name %}

{% block body %}
    <div class="jumbotron">
        <div class="container">
            <div class="row">
                <div class="col-md-8">

                </div>
                <div class="col-md-4">
                    <h1>{{ product.name }}</h1>
                    <h2>{{ product.city }}</h2>
                    <div class="text-danger" style="font-weight: bold;font-size: 4rem;">{{ product.formattedPrice }}</div>
                    <a href="#" class="btn btn-primary">Contacter le vendeur</a>
                </div>
            </div>
        </div>
    </div>
    <div class="container mt-4">
        <p>
            {{ product.description | nl2br }}
        </p>

        <div class="row">
            <div class="col-md-8">
                <h2>Caractéristiques</h2>
            </div>
            <div class="col-md-4">
                <h2>Spécificités</h2>
            </div>
        </div>
    </div>
{% endblock %}