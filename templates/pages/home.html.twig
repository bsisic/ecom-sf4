{% extends 'base.html.twig' %}

{% block title 'Lebonfork' %}

{% block body %}
    <div class="jumbotron text-center">
        <h1>Lebonfork</h1>
    </div>

    <div class="container">
        <h2>Les derniers biens</h2>
        <div class="div row flex">
            {% for product in products %}
                <div class="col-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="{{ path('product.show', {id: product.id, slug: product.slug}) }}">{{ product.name }}</a>
                                <p class="card-text">{{ product.city }}</p>
                                <div class="text-danger" style="font-weight: bold;font-size: 2rem;">{{ product.formattedPrice }} Â£</div>
                            </h5>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}